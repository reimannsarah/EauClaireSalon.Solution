@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client
@using HairSalon.Models

<h2>Edit</h2>

<h4>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ClientId)
  
  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)
  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownListFor(model => model.StylistId, ViewBag.StylistList as SelectList, "Select a Stylist", new { @class ="form-control" })
  <input type="submit" value ="Save" />
}

<p>@Html.ActionLink("Back to Clients", "Index")</p>
<p>@Html.ActionLink("Home","Index","Home")</p>