@{
  Layout = "_Layout";
}

@using HairSalon.Models

@if (Model.Count == 0)
{
  <p>No Clients Added</p>
}

@foreach (Client client in Model)
{
  <p>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId}, new { @class = "btn" })</p>
  
}
<p>@Html.ActionLink("Add New", "Create", "Clients", null, new { @class = "btn" })</p>