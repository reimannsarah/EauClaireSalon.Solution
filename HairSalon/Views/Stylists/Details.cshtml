@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h3>@Model.Name</h3>

<p>@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)</p>
<p>Clients:</p>
@foreach (Client client in Model.Clients)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", "Items", new { id = client.ClientId })</li>
}

@Html.ActionLink("Edit", "Edit", new { id = Model.StylistId })
@Html.ActionLink("Delete", "Delete", new { id = Model.StylistId })

